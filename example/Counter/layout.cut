
// Document Metadata
metadata {
    title : "Cutty - Counter Example",

    require : [
        "script.js"
    ]
}

// Document Viewport
viewport {
    counter {
        content : count
    }

    button {
        click : onIncrease(),
        content : "+1"
    }

    button {
        click : onDecrease(),
        content : "-1"
    }
}